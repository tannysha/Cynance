<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_gradient"
    android:gravity="center">

    <!-- Input Fields -->
    <EditText
        android:id="@+id/income_amount_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Income Amount"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/income_source_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Income Source"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <Spinner
        android:id="@+id/payment_frequency_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/payment_frequency_array"
        android:layout_marginBottom="16dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/save_income_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#074887" />

        <Button
            android:id="@+id/update_income_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#074887" />
    </LinearLayout>

    <Button
        android:id="@+id/delete_all_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete All Income"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#074887"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/income_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Income Details"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Income History List -->
    <ListView
        android:id="@+id/income_history_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#074887" />

        <Button
            android:id="@+id/delete_income_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Selected Income"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#074887" />
    </LinearLayout>

</LinearLayout>
