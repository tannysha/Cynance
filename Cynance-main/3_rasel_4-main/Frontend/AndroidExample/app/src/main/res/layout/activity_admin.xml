<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Panel"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/ban_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter username to ban"
            android:layout_marginBottom="12dp"
            android:inputType="textPersonName"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#DDDDDD"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/ban_user_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ban User"
            android:backgroundTint="#074887"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/faq_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:backgroundTint="#074887"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/bug_report_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe the bug"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#000000"
            android:textColorHint="#000000"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/report_bug_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report a Bug"
            android:backgroundTint="#074887"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
