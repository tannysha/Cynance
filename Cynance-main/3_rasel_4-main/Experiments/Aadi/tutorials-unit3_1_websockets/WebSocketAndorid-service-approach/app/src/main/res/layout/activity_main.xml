<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Server 1 Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server 1 URL (default to):"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"/>

    <EditText
        android:id="@+id/serverEdt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ws://10.0.2.2:8080/chat/1/"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"/>

    <EditText
        android:id="@+id/unameEdt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Enter username"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"/>

    <Button
        android:id="@+id/connectBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Connect to Chat Server 1"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Back to Chat Server 1"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/white"/>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <!-- Server 2 Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server 2 URL (default to):"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"/>

    <EditText
        android:id="@+id/serverEdt2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ws://10.0.2.2:8080/chat/2/"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"/>

    <EditText
        android:id="@+id/unameEdt2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Enter username"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"/>

    <Button
        android:id="@+id/connectBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Connect to Chat Server 2"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/backBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Back to Chat Server 2"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/white"/>
</LinearLayout>